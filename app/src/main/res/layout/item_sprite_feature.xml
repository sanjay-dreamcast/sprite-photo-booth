<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/featureIdTxt"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:gravity="center"
            tools:text="01"
            android:textColor="@android:color/white"
            android:textSize="@dimen/sp_24"
            android:padding="@dimen/dp_8"
            app:fontFamily="@font/metric_medium"
            android:background="@drawable/bg_green_circle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/featureNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:includeFontPadding="false"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/sp_24"
            app:fontFamily="@font/metric_medium"
            app:layout_constraintBottom_toBottomOf="@+id/featureIdTxt"
            app:layout_constraintStart_toEndOf="@id/featureIdTxt"
            app:layout_constraintTop_toTopOf="@+id/featureIdTxt"
            app:layout_constraintVertical_bias="0.5"
            tools:text="0fdfdf1" />
        <ImageView
            android:id="@+id/divider"
            android:layout_width="wrap_content"
            android:src="@drawable/dash"
            android:rotation="90"
            android:layout_height="40dp"
            app:layout_constraintTop_toBottomOf="@id/featureIdTxt"
            app:layout_constraintStart_toStartOf="@id/featureIdTxt"
            app:layout_constraintEnd_toEndOf="@id/featureIdTxt"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
