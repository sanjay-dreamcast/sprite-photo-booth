<selector xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Pressed state -->
<item android:state_pressed="true">
    <shape android:shape="rectangle">
        <corners android:radius="10dp" />
        <!-- Define the background color or drawable for the pressed state -->
        <solid android:color="@color/greendark" />
    </shape>
</item>

<!-- Focused state -->
<item android:state_focused="true">
    <shape android:shape="rectangle">
        <corners android:radius="10dp" />
        <!-- Define the background color or drawable for the focused state -->
        <solid android:color="@color/green" />
    </shape>
</item>

<!-- Default state -->
<item>
    <shape android:shape="rectangle">
        <corners android:radius="10dp" />
        <!-- Define the background color or drawable for the default state -->
        <solid android:color="@color/green" />
    </shape>
</item>

</selector>
